@using TicketSystem.Models
@model IEnumerable<Ticket>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<main role="main">

    <section class="jumbotron text-center">
        <div class="container">
            <h1 class="jumbotron-heading">Album example</h1>
            <p class="lead text-muted"> This Project is Made As Requested for an Interview</p>
            
        </div>
    </section>

    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row">

                @foreach (var item in Model)
                {

                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <div class="card-body">

                                <p style="display:inline" >Title : </p> <p class="card-text">@item.Title</p>
                                <p style ="display:inline">Description : </p> <p class="card-text">@item.Description</p>
                                <p style="display:inline">Summary : </p> <p class="card-text">@item.Summary</p>
                                <p style="display:inline">Status : </p> <p class="card-text">@item.Status</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Ticket" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                        <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Ticket" asp-action="Edit" asp-route-id="@item.Id"> Edit </a>
                                        <a type="button" class="btn btn-sm btn-outline-info" asp-controller="Ticket" asp-action="Resolve" asp-route-id="@item.Id"> Resolve </a>
                                    </div>
                                 <small class="text-muted">@item.Priority</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }





            </div>
        </div>
    </div>

</main>